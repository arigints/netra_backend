FROM quay.tiplab.local/openetra/ubuntu:jammy-backendbase

LABEL maintainer="gintingari73@gmail.com"

# set and install requirement packages
COPY . /app
WORKDIR /app
ENV TZ=Asia/Bangkok
ENV OAI=https://github.com/adaptivenetworklab/AN-OPEN-NETRA-VNF.git
RUN chmod go-r $KUBECONFIG && pip install --no-cache-dir -r /app/requirements.txt
RUN chmod +x /app/deployment/oai-clone.sh && bash /app/deployment/oai-clone.sh

#running service
EXPOSE 8000
CMD [ "python3", "manage.py", "runserver", "0.0.0.0:8000" ]
